<%- include('header', { title: 'Edit profile' }); %>
<%- include('nav_bar', { id: 'my_account', user: user }); %>

<div class="container py-3">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="p-3 mb-2 bg-success text-white" style="display: none;" id="edit_message">Successfuly
                        updated</div>
                    <div class="p-3 mb-2 bg-danger text-white" style="display: none;" id="edit_danger">Error</div>
                    <h5 class="card-title">Edit Profile</h5>
                    <form id="edit_form">
                        <div class="form-group row">
                            <label for="staticUsername" class="col-sm-2 col-form-label">Username</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="staticUsername"
                                    value="<%= user.username %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputfirstname" class="col-sm-2 col-form-label">First name</label>
                            <div class="col-sm-10">
                                <input type="text" name="firstname" class="form-control" id="inputfirstname"
                                    value="<%= user.firstname %>" placeholder="First name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputlastname" class="col-sm-2 col-form-label">Last name</label>
                            <div class="col-sm-10">
                                <input type="text" name="lastname" class="form-control" id="inputlastname"
                                    value="<%= user.lastname %>" placeholder="Last name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10 align-middle">
                                <a class="d-flex align-items-center h-100" href="#">Change password</a>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputbirthdate" class="col-sm-2 col-form-label">Birthdate</label>
                            <div class="col-sm-10">
                                <input type="date" name="birthdate" class="form-control" id="inputbirthdate"
                                    value=<%=user.birthdate ? user.birthdate.toISOString().split("T")[0] : ""%>>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Bio</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="inputbio" placeholder="About me"
                                    rows="3"><%=user.bio%></textarea>
                            </div>
                        </div>
                        <button href="#" type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer', { javascript_uri: '/javascripts/edit_profile.js' }); %>