<%- include('header', { title: 'Edit profile' }); %>
<%- include('nav_bar', { id: 'null', user: user }); %>

<div class="container py-3">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <div class="row">
                        <div class="col-sm-2">Username:</div>
                        <div class="col-sm-10">
                            <strong><%= user.username %></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">First name:</div>
                        <div class="col-sm-10">
                            <strong><%= user.firstname %></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Last name:</div>
                        <div class="col-sm-10">
                            <strong><%= user.lastname %></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Birthdate:</div>
                        <div class="col-sm-10">
                            <strong><%= user.birthdate ? user.birthdate.toISOString().split("T")[0]: "Empty" %></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Bio:</div>
                        <div class="col-sm-10">
                            <strong><%= user.bio %></strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer', { javascript_uri: '/javascripts/edit_profile.js' }); %>